<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.mymedia.Main2Activity"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="6dp">
        <ImageButton
            android:layout_width="20dp"
            android:layout_height="34dp"
            android:src="@drawable/back"
            android:scaleType="centerInside"
            android:layout_centerVertical="true"
            android:background="@drawable/white"
            android:id="@+id/btn_back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/media_list_title"
            android:text="华语"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/btn_back"
            style="@style/MediaListTitle"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/list_header_bg">
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/media_list_image"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/media_list_image"
            android:text="听歌的人，不许掉眼泪。低音男神王昕发布新单曲《玛莲娜》，在翩翩起舞的音乐中，吟唱少年时期的青涩爱恋。"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"/>
