<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.administrator.mymedia.MediaPlayActivity">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="6dp"
        android:id="@+id/topBar">
        <ImageButton
            android:layout_width="20dp"
            android:layout_height="34dp"
            android:src="@drawable/back"
            android:scaleType="centerInside"
            android:layout_centerVertical="true"
            android:background="@drawable/white"
            android:id="@+id/btn_back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/media_song_title"
            android:text="歌曲名称"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/btn_back"
            style="@style/MediaListTitle"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/list_header_bg"
        android:layout_below="@id/topBar">
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/media_list_image"
            android:layout_centerVertical="true"
            android:scaleType="centerInside"
            android:layout_marginLeft="20dp"
            android:src="@drawable/logo"/>

        <ImageButton
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_toRightOf="@id/media_list_image"
            android:src="@drawable/btn_pre"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40dp"
            android:scaleType="centerCrop"
            android:background="@drawable/transparent"
            android:id="@+id/btn_play_pre"/>
        <ImageButton
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_toRightOf="@id/btn_play_pre"
            android:src="@drawable/btn_stop"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:scaleType="centerCrop"
            android:background="@drawable/transparent"
            android:id="@+id/btn_play_play"/>
        <ImageButton
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_toRightOf="@id/btn_play_play"
            android:src="@drawable/btn_next"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:scaleType="centerCrop"
            android:background="@drawable/transparent"
            android:id="@+id/btn_play_next"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:visibility="gone">
        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/seekBarVoice"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/seekBarVoice"
            android:id="@+id/seekBarVoiceText"
            android:text="voice"
            android:layout_marginTop="20dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/seekBarMedia"
            android:progressDrawable="@drawable/blue"
            android:maxHeight="2dp"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/seekBarMedia"
            android:layout_alignParentRight="true"
            android:id="@+id/seekBarMediaMaxText"
            android:text="/voice"
            android:layout_marginTop="3dp"
            android:layout_marginRight="15dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/seekBarMedia"
            android:id="@+id/seekBarMediaCurText"
            android:text="voice"
            android:layout_marginTop="3dp"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@id/seekBarMediaMaxText"/>

    </RelativeLayout>


</RelativeLayout>
